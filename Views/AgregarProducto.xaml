<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="SmartTrade.Views.AgregarProducto"
             Title="AgregarProducto">
    <VerticalStackLayout >

        <!-- Barra de búsqueda fija en la parte superior -->
        <SearchBar Placeholder="Buscar..."
                   HorizontalOptions="FillAndExpand"
                   VerticalOptions="Start"
                   Margin="10" />

        <!--Hay que añadir la del icono del carrito -->




        <ScrollView >
            <VerticalStackLayout Margin="30" Spacing="12">
                <!-- Nombre del equipo -->
                <Label Text="Título del producto" FontSize="22" FontAttributes="Bold" HorizontalOptions="Start"/>
                <Entry Placeholder="Ingresa el nombre del equipo" Text="{Binding Nombre}" />



            </VerticalStackLayout>
        </ScrollView>
    </VerticalStackLayout>
</ContentPage>